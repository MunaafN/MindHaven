# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mindhaven
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/mindhaven

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Email Configuration (if implementing email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# File Upload Configuration (if implementing file uploads)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=info
